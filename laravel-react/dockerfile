# 1. Base image with PHP 8.2 and required extensions
FROM php:8.2-cli

# 2. Install system dependencies, Node, npm, and Composer
RUN apt-get update && apt-get install -y \
    git unzip curl libpq-dev libzip-dev zip nodejs npm \
    && docker-php-ext-install pdo pdo_mysql pdo_pgsql zip

# 3. Install Composer globally
RUN curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer

# 4. Set working directory
WORKDIR /app

# 5. Copy ALL application files first (artisan needs to be present)
COPY . .

# 6. Install PHP dependencies (without dev dependencies and skip scripts initially)
RUN composer install --optimize-autoloader --no-dev --no-scripts

# 7. Run the Composer scripts manually (now that artisan exists)
RUN composer run-script post-autoload-dump

# 8. Install Node dependencies and build assets
RUN npm install && npm run build

# 9. Set proper permissions
RUN chown -R www-data:www-data /app/storage /app/bootstrap/cache
RUN chmod -R 775 /app/storage /app/bootstrap/cache

# 10. Expose Render's port
EXPOSE 10000

# 11. Start Laravel with proper host binding
CMD php artisan migrate --force && php artisan serve --host=0.0.0.0 --port=10000
