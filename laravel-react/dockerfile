# 1Ô∏è‚É£ Base image with PHP 8.2 and required extensions
FROM php:8.2-fpm

# 2Ô∏è‚É£ Install system dependencies, Node, npm, and extensions
RUN apt-get update && apt-get install -y \
    git unzip curl libpq-dev libzip-dev zip nodejs npm \
    && docker-php-ext-install pdo pdo_pgsql zip

# 3Ô∏è‚É£ Install Composer globally
RUN curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer

# 4Ô∏è‚É£ Set working directory
WORKDIR /app

# 5Ô∏è‚É£ Copy dependency files first (for caching)
COPY composer.json composer.lock package.json package-lock.json* ./

# 6Ô∏è‚É£ Install PHP dependencies
RUN composer install --optimize-autoloader --no-dev --no-scripts

# 7Ô∏è‚É£ Install Node dependencies and build assets
RUN npm install
RUN npm run build

# 8Ô∏è‚É£ Copy the rest of the application
COPY . .

# 9Ô∏è‚É£ Run Composer post-autoload scripts (artisan now exists)
RUN composer run-script post-autoload-dump

# üîü Set storage & cache permissions
RUN chown -R www-data:www-data /app/storage /app/bootstrap/cache
RUN chmod -R 775 /app/storage /app/bootstrap/cache

# 1Ô∏è‚É£1Ô∏è‚É£ Add wait-for-it to wait for database
ADD https://raw.githubusercontent.com/vishnubob/wait-for-it/master/wait-for-it.sh /usr/local/bin/wait-for-it
RUN chmod +x /usr/local/bin/wait-for-it

# 1Ô∏è‚É£2Ô∏è‚É£ Expose Render port
EXPOSE 10000

# 1Ô∏è‚É£3Ô∏è‚É£ Entrypoint: wait for DB, migrate, clear caches, serve Laravel
CMD bash -c "\
    /usr/local/bin/wait-for-it ${DB_HOST:-localhost}:${DB_PORT:-5432} --timeout=30 --strict -- \
    php artisan config:clear && php artisan cache:clear && php artisan route:clear && php artisan view:clear && \
    php artisan migrate --force && \
    php artisan serve --host=0.0.0.0 --port=10000"
